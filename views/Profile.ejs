<%- include("header") %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2>Profile:</h2>
        <table class="table table-striped table-bordered">
          <tr>
            <th>Name:</th>
            <th>Tag:</th>
            <th>Tel:</th>
            <th>Email:</th>
          </tr>
          <tr>
            <td><%= name %></td>
            <td><%= tag %></td>
            <td><%= tel %></td>
            <td><%= email %></td>
          </tr>
        </table>
        <a href="/profile/<%= sessionID %>/edit" class="btn ">Edit profile</a>
        <a href="/logout" class="btn btn-sm btn-primary"><i
                  class="far fa-edit"></i>Log out</a>
        <h2>Swap list</h2>
        <table class="table table-striped table-bordered">
          <tr>
            <th>
              I offer
            </th>
            <th>
              Swap to
            </th>

            <th>
              &nbsp;
            </th>
          </tr>
          <% swaps.forEach(function(swap){ %>
            <tr>
              <td>
                <%= swap.Type_own + '/' + swap.Gender_own +'/'+ swap.Size_own + '/' + swap.Value_own  %>
              </td>

              <td>
                  <%= swap.Type_swapto + '/' + swap.Gender_swapto+ '/' + swap.Size_swapto + '/' + swap.Value_swapto  %>
              </td>

              <td style="width:30px;white-space: nowrap">

                <a href="/profile/<%= sessionID %>/clothes/<%= swap._id %>/edit" class="btn btn-sm btn-primary"><i
                          class="far fa-edit"></i>Edit</a>
                <a href="/profile/<%= sessionID %>/clothes/<%= swap._id %>/delete" class="btn btn-sm btn-danger"><i
                          class="far fa-trash-alt"></i>Delete</a>
                  <a href="/profile/<%= sessionID %>/clothes/<%= swap._id %>/swap" class="btn btn-sm btn-success">Swap</a>
              </td>
            </tr>
          <% }); %>
        </table>
        <br/>
        <a href="/profile/<%= sessionID %>/clothes/add" class="btn btn-block btn-primary">New Swap</a>
      </div>
    </div>
  </div>

<%- include("footer") %>